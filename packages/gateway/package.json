{
  "name": "@yologuard/gateway",
  "version": "0.0.1-pre-alpha.1",
  "description": "YoloGuard control plane â€” Fastify + OpenAPI gateway server",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yologuard/yologuard.git",
    "directory": "packages/gateway"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "openapi.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "node --watch dist/index.js",
    "test": "vitest run",
    "lint": "biome check src/",
    "typegen": "openapicmd typegen --backend ./openapi.yaml > src/types/openapi.d.ts"
  },
  "dependencies": {
    "@fastify/websocket": "^11.2.0",
    "@yologuard/sandbox": "workspace:*",
    "@yologuard/shared": "workspace:*",
    "ajv-formats": "^3.0.1",
    "dockerode": "^4.0.7",
    "fastify": "^5.3.3",
    "http-errors": "^2.0.0",
    "openapi-backend": "^5.15.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.38",
    "@types/http-errors": "^2.0.4",
    "openapicmd": "^2.7.0"
  }
}
