{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "*.test.ts"]
    },
    "lint": {},
    "check": {
      "dependsOn": ["lint", "test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
